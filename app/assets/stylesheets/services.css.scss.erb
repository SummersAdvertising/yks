@charset "utf-8";
/* CSS Document */

/*左邊目錄外框*/
#menulistbody{
    float:left;
	width:274px;
	z-index:3px;
}
/*左方目錄下拉選單*/
ul#menu, ul#menu ul {
  list-style-type:none;
  margin: 0;
  padding: 0;
  width: 274px;
}

ul#menu a {
  display: block;
  text-decoration: none;	
}

ul#menu li {

}

ul#menu li a {
  background-image:url("<%= asset_data_uri "menubg.png" %>");
  color: #666666;	
  font: 16px "微軟正黑體", Arial, Helvetica, sans-serif;
  text-align:right;
  padding: 23px 30px 20px 20px;
}

ul#menu li a.linkActived, ul#menu li a.parentSelected{
  background-image:url("<%= asset_data_uri "menuover.png" %>");
  color:#FFFFFF;
}


ul#menu li a:hover {
  background-image:url("<%= asset_data_uri "menuover.png" %>");
  color:#FFFFFF;
}


ul#menu li ul li a {
  background-image:url("<%= asset_data_uri "menubg2.png" %>");
  font: 15px "微軟正黑體", Arial, Helvetica, sans-serif;
  color:#541e1e;	
  padding:10px 30px 10px 10px;
}

ul#menu li ul li a:hover, ul#menu li ul li.serviceSelected a {
  color:#cc0000;	
  background-image:url("<%= asset_data_uri "menubg2.png" %>");  
}

ul#menu li ul li a.linkActived{
  color:#cc0000;	
  background-image:url("<%= asset_data_uri "menubg2.png" %>");  
}

