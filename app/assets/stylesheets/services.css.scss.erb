@charset "utf-8";
/* CSS Document */

/*左邊目錄外框*/
#menulistbody{
    float:left;
	width:274px;
	z-index:3px;
}
/*左方目錄下拉選單*/
ul#menu {
  background-image:url("<%= asset_data_uri "menubg.png" %>");	
}
ul#menu, ul#menu ul {
  list-style-type:none;
  margin: 0;
  padding: 0;
  width: 274px;
}

ul#menu a {
  display: block;
  text-decoration: none;	
}

ul.listActived {
	padding-bottom:  30px!important;
  background-image:url("<%= asset_data_uri "menubg.png" %>");	
}


ul#menu li a {
  background-image:url("<%= asset_data_uri "menubg.png" %>");
  color: #666666;	
  font: 16px "微軟正黑體", Arial, Helvetica, sans-serif;
  text-align:right;
  padding: 23px 30px 20px 20px;
}

ul#menu li a.linkActived, ul#menu li a.parentSelected{
  background-image:url("<%= asset_data_uri "menuover.png" %>");
  color:#FFFFFF;
}


ul#menu li a:hover {
  background-image:url("<%= asset_data_uri "menuover.png" %>");
  color:#FFFFFF;
}


ul#menu li ul li a {
  background-image:url("<%= asset_data_uri "menubg2.png" %>");
  font: 13px "微軟正黑體", Arial, Helvetica, sans-serif;
  color:#541e1e;	
  padding:5px 30px 5px 10px;
}

ul#menu li ul li a:hover, ul#menu li ul li.serviceSelected a {
  color:#cc0000;	
  background-image:url("<%= asset_data_uri "menubg2.png" %>");  
}

ul#menu li ul li a.linkActived{
  color:#cc0000;	
  background-image:url("<%= asset_data_uri "menubg2.png" %>");  
}

#servicetitle1{
   width:680px;
   float:left;
   font: 26px "微軟正黑體", Arial, Helvetica, sans-serif;
   color:#DC7110;
   margin:0px 0px 20px 0px;
}

#servicetitle2{
   width:680px;
   float:left;
   font: 22px "微軟正黑體", Arial, Helvetica, sans-serif;
   font-weight:bold;
   color:#4a1a00;
   margin:2px 0px 0px 0px;
}
#servicetitle3{
   width:680px;
   float:left;
   font: 20px "微軟正黑體", Arial, Helvetica, sans-serif;
   color:#666666;
   margin:0px 0px 3px 0px;
}

#servicecontent{
   float:left;
   width:680px;
   padding:10px 0px 10px 0px;
}

#servicecontent li{
   list-style-image:url("<%= asset_data_uri "point.jpg" %>");
   list-style-position:outside;
   margin-left: 20px;
}

/*清潔撇步新增樣式*/
.knacktitle{
   width:680px;
   float:left;
   font: 16px "微軟正黑體", Arial, Helvetica, sans-serif;
   color:#111;
   padding:0px 0px 0px 15px;
   margin:5px 0px 5px 0px;
   background-image: url("<%= asset_data_uri "knack_mark.png" %>");
   background-repeat:no-repeat;
   background-position:left;
}
.knacktitle a:link{ color:#111; text-decoration:none; }
.knacktitle a:visited{ color:#888;}
.knacktitle a:hover{ color:#ef7201;}
.knackmore{
	font: 16px "微軟正黑體", Arial, Helvetica, sans-serif;
	width:680px;
    float:left;
	padding:0px 0px 0px 0px;
    margin:5px 0px 5px 0px;
	text-decoration:none;
}
.knackmore a:link{ color:#111;}
.knackmore a:visited{ color:#111;}
.knackmore a:hover{ color:#ef7201;}
.knack_item { 
	color:#ef7201; 
	font-weight:bold;
}
.fb_share{ 
	float:right; 
	margin:0px 20px 5px 0px;
	filter:alpha(opacity=85); 
	opacity:0.85;
}
.fb_share:hover{ 
	float:right;
	filter:alpha(opacity=100); 
	opacity:1;
}