#new_user {
	width:520px;
	margin:100px auto 0 auto;
	height:260px;
	border:1px solid #d7d7d7;
	box-shadow:0 0 10px #ddd;
	-webkit-border-radius: 15px;
	border-radius: 15px;
	padding:40px;
	background:url(<%= asset_data_uri('login-vs.jpg') %>) top center no-repeat #fff;
}
#type {
	margin:140px auto 0 auto;
	*margin:180px auto 0 auto;
	width:300px;
}
#new_user li {
	margin-bottom:10px;
}
#new_user li span {
	font:300 17px "微軟正黑體";
	color:#DF5411;
	margin-right:25px
}
#new_user li input {
	border: 1px solid #ccc;
	-webkit-border-radius: 5px;
	border-radius: 5px;
	padding: 5px;
	width:70%
}
#login {
	margin:0 auto;
	width:100%;
	text-align:right
}
#login input {
	background:url(<%= asset_data_uri('login-bt.jpg') %>) top center no-repeat;
	height:31px;
	-webkit-border-radius: 5px;
	border-radius: 5px;
	border:none;
	box-shadow:0 0 2px #aaa;
	width:70px;
	color:#fff;
	font:700 18px "微軟正黑體"
}
#login input:hover {
	background:url(<%= asset_data_uri('login-bt.jpg') %>) bottom center no-repeat;
}
