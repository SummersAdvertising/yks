<h1><%= t("users.tablename") %> - <%= t("helpers.new") %></h1>
<%= form_for([:admin, @user], :url => {:action => "changepw"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="old-pw">
  <div class="field">
    <%= f.label :password, '請輸入舊密碼' %><br />
    <%= f.password_field :password %>
  </div>
  </div>
  <div id="new-pw">
  <div class="field">
    <%= label_tag 'newpassword', '請輸入新密碼' %><br />
    <%= password_field_tag 'newpassword' %>
  </div>
  <div class="field">
    <%= label_tag 'confirmpassword', '再次確認新密碼' %><br />
    <%= password_field_tag 'confirmpassword' %>
  </div>
  </div>
  <div class="actions">
    <%= submit %>
    <%= cancel %>
  </div>
<% end %>
