<html>
<head>
<script type="text/javascript" src="<%=image_path "/javascripts/jquery-1.7.1.min.js"%>"></script>
<script type="text/javascript">
function changeImage(image){
	$('#selectimage').val(image);
}
</script>
</head>

<body>
<input type="hidden" id="selectimage">
<div class="list">
<table>
  <tr>
    <td class=""></td>
    <td class=""><%= t("images.name") %></td>
  </tr>
<% @dirs.each do |dir|
	next if dir == "."
	next if dir == ".."
	next if dir == ".DS_Store"
	%>
  <tr class="list-content">
    <td class="first" align="center" valign="middle"><img src="<%= image_path("/news/#{dir}") %>" style="width: auto; height: auto; max-width: 100px; max-height: 100px;" onclick="changeImage('<%= image_path("/news/#{dir}") %>')" /></td>
	<td>
	<div class="list-command">
	<%= link_to t("helpers.delete"), { :action => "destroy", :image => dir }, :class => "del", :confirm => "Are you sure you want to delete this article?", :method => :delete %>
	</div></td>
  </tr>
<% end %>
</table>
</div>
</body>
</html>