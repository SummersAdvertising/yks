<h1><%= t("images.tablename") %></h1>
<input type="hidden" id="test" value="a">
<div class="list">
<table>
  <tr>
    <td class=""></td>
    <td class=""><%= t("images.name") %></td>
  </tr>
<% @dirs.each do |dir|
	next if dir == "."
	next if dir == ".."
	next if dir == ".DS_Store"
	%>
  <tr class="list-content">
    <td class="first" align="center" valign="middle"><img src="<%= image_path("/news/#{dir}") %>" /></td>
	<td><%=dir%>
	<div class="list-command">
	<%= link_to t("helpers.delete"), { :action => "destroy", :image => dir }, :class => "del", :confirm => "Are you sure you want to delete this article?", :method => :delete %>
	</div></td>
  </tr>
<% end %>
</table>
</div>