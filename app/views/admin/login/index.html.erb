<h1>管理者登入</h1>

<%= form_for([:admin,@user], :url => {:controller => :login, :action => :login}) do |f| %>
<div>
	<div></div>
	<div><span><%= t("users.user") %></span><%= f.text_field :user %></div>
	<div><span><%= t("users.password") %></span><%= f.password_field :password %></div>
	<div><%= f.submit "登入"%></div>
</div>
<% end %>