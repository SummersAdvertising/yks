<script type="text/javascript">
$(document).ready(function() {
		
		var animateLock = false;
		
		$('#btn1').mouseover(function(e) {
			
			if ( e &&e.stopPropagation) {
				e.stopPropagation();
			} else {
				window.event.cancelBubble = true;
			}
			
			if ($('#businessbox').is(':not(:visible)')) {				
				$('#businessbox').toggle('slow');
			}
			
		});
		
		$('#businessArea').click(function(e) {
			if ( e &&e.stopPropagation) {
				e.stopPropagation();
			} else {
				window.event.cancelBubble = true;
			}
			$('#businessbox').fadeIn('slow');
			
			return;
		});
		
		$(this).click(function() { 
			if ($('#businessbox').is(':visible') && !animateLock) {				
				$('#businessbox').toggle('slow');
			}
		});
		
		$(".topMenuAction").click( function() {
			if ($("#openCloseIdentifier").is(":hidden")) {
				$("#slider").animate({ 
					marginTop: "-161px"
					}, 500 );
				$("#topMenuImage").html('<img src="<%= image_path("open.png") %>" alt="open" />');
				$("#openCloseIdentifier").show();
			} else {
				$("#slider").animate({ 
					marginTop: "-20px"
					}, 500 );
				$("#topMenuImage").html('<img src="<%= image_path("close.png") %>" alt="close" />');
				$("#openCloseIdentifier").hide();
			}
		});  
	});
function MM_openBrWindow(theURL,winName,features) { //v2.0
  window.open(theURL,winName,features);
}
</script>
