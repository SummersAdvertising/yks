<div id="servicecontent">
	<% 
		@service.content.each do | content | 
		
		itemAry = content[1]['blockcontent'].split("\n")
	%>	
	
  <span class="black_15">【<%= content[1]['block'] %>】</span><br>
  <span class="gray_13">
  <ul>
  	<% 
  		if itemAry.size  		
	  		# 產生回圈輸出項目內容
	  		itemAry.each do |item|	 
	  		%>
	  		<li><%= item %></li>
	  		<%  		
	  		end
  		end
  	 %>
  </ul>
  </span><br>
  <br>
  	
	<% end %>
</div>
