<%= form_for(@service) do |f| %>
<%= javascript_include_tag "/public/ckeditor/ckeditor.js" %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this services from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, '服務項目' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, '內容' %><br />
    <%= f.text_area :content %>
			<script type="text/javascript">
			//<![CDATA[

				// This call can be placed at any point after the
				// <textarea>, or inside a <head><script> in a
				// window.onload event handler.

				// Replace the <textarea id="editor"> with an CKEditor
				// instance, using default configurations.
				CKEDITOR.replace( 'service_content' );

			//]]>
			</script>

  </div>
  <div class="field">
    <%= f.label :time, '時間' %><br />
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :status, '狀態' %><br />
    <%= f.check_box :status %>
  </div>
  <div class="actions">
    <%= submit %>
    <%= reset %>
  </div>
<% end %>
